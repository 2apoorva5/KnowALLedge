<resources>

    <!-- Base developerdepository theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="ErrorAlert" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SpotsDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@style/ProgressText</item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
        <item name="DialogSpotCount">4</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="ProgressText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
